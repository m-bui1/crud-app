<% if logged_in? %>
    <h2>Welcome to Lyric Hub <%= current_user['first_name'] %> </h2>

    <section class="controls">
        <form action="/sessions" method="POST">
            <input type="hidden" name="_method" value="delete">
            <button>Logout</button>
        </form>

        <a href="/songs/new">Add Song</a>
    </section>

    <div class="lyrics">
            <% song.each do |music| %>
            <div>
                <audio controls>
                <source src="/songs/<%=music['name']%>.mp3" 
                <%# preload="auto" %>
                
                type="audio/mpeg">	
                </audio>
            </div>
    
            <br>

        <section class="search">
            <header>
                <h2 class="search"> 
                    <%= music['name'] %> 
                    <br>                   
                    <%= music['artist'] %>

                </h2>
            </header>
            <%= music['lyrics']%>
            <% end %>
    </div>    
    </section>
    <br>
    <a href="/">Return to search</a>
    <% else %>

        <a href="/users/new">Sign up</a>
        <a href="/sessions/new">Login</a>

<% end %>